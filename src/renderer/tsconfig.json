{
  "$schema": "https://www.schemastore.org/tsconfig.json",
  "extends": "../../tsconfig.base.json",
  "include": [
    "**/*",
    "../shared/**/*",
    "../../typings.custom/*.d.ts",
    "./typings.custom/*.d.ts"
  ],
  "exclude": [
    "./util/vortex-run/**/*",
    "./__tests__/",
    "./__mocks__/",
    "./dist",
    "./temp",
    "./setupTests.js",
    "./jest.config.mjs"
  ],
  "compilerOptions": {
    "composite": true,
    "target": "esnext",
    "module": "commonjs", // TODO: change to esnext
    "moduleResolution": "node", // TODO: change to bundler
    "jsx": "react-jsx",
    "baseUrl": ".",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "outDir": "../main/out",
    "rootDir": "..",
    "inlineSourceMap": true,
    "inlineSources": true,
    "removeComments": true
  }
}
