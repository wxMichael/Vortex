{
  "$schema": "https://www.schemastore.org/tsconfig.json",
  "extends": "../../tsconfig.base.json",
  "include": ["**/*", "../../typings.custom/*.d.ts", "./typings.custom/*.d.ts"],
  "exclude": [
    "./util/vortex-run/**/*",
    "./__tests__/",
    "./__mocks__/",
    "./dist",
    "./temp",
    "./setupTests.js",
    "./jest.config.mjs"
  ],
  "compilerOptions": {
    "composite": true,
    "target": "esnext",
    "module": "node16", // TODO: change to esnext
    "moduleResolution": "node16", // TODO: change to bundler
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "outDir": "../main/out/renderer",
    "inlineSourceMap": true,
    "inlineSources": true,
    "removeComments": true
  }
}
