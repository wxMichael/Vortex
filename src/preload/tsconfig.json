{
  "$schema": "https://www.schemastore.org/tsconfig.json",
  "extends": "../../tsconfig.base.json",
  "include": [
    "**/*",
    "../../typings.custom/electron.d.ts",
    "../../typings.custom/promise.d.ts"
  ],
  "exclude": ["./webpack.config.cjs"],
  "compilerOptions": {
    "composite": true,
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "types": ["node"],
    "outDir": "../main/out/preload",
    "inlineSourceMap": true,
    "inlineSources": true,
    "removeComments": true
  }
}
