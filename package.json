{
  "$schema": "https://www.schemastore.org/package.json",
  "name": "@vortex/monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "packageManager": "pnpm@10.30.3+sha512.c961d1e0a2d8e354ecaa5166b822516668b7f44cb5bd95122d590dd81922f606f5473b6d23ec4a5be05e7fcd18e8488d47d978bbe981872f1145d06e9a740017",
  "engines": {
    "node": "22"
  },
  "volta": {
    "node": "22.22.0",
    "yarn": "1.22.19"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build:fomod": "node ./preinstall.js",
    "start": "pnpm -F @vortex/main run start",
    "build": "pnpm -r run build",
    "dist": "pnpm -r run dist",
    "package": "pnpm run dist && pnpm run assets:dist && pnpm run subprojects:dist && pnpm -F @vortex/main run package",
    "package:nosign": "pnpm run dist && pnpm run assets:dist && pnpm run subprojects:dist && pnpm -F @vortex/main run package:nosign",
    "assets:out": "node ./InstallAssets.mjs ./src/main/out && pnpm sass --style compressed ./src/stylesheets/loadingScreen.scss ./src/main/out/assets/css/loadingScreen.css && pnpm tailwindcss -i ./src/stylesheets/tailwind-v4.css -o ./src/main/out/assets/css/tailwind-v4.css -m",
    "assets:dist": "node ./InstallAssets.mjs ./src/main/dist && pnpm sass --style compressed ./src/stylesheets/loadingScreen.scss ./src/main/dist/assets/css/loadingScreen.css && pnpm tailwindcss -i ./src/stylesheets/tailwind-v4.css -o ./src/main/dist/assets/css/tailwind-v4.css -m",
    "subprojects:out": "node ./BuildSubprojects.mjs ./src/main/out",
    "subprojects:dist": "node ./BuildSubprojects.mjs ./src/main/dist",
    "typecheck": "pnpm -r run typecheck",
    "test": "pnpm -r run test",
    "api": "pnpm -F @vortex/renderer run api:build && pnpm -F @vortex/renderer run api:docs",
    "lint": "pnpm eslint --cache --concurrency auto .",
    "lint:quiet": "pnpm eslint --cache --concurrency auto --quiet .",
    "lint:ci": "pnpm cross-env CI=1 pnpm eslint --quiet .",
    "format": "pnpm prettier --write .",
    "format:check": "pnpm prettier --check .",
    "format:quick": "pnpm pretty-quick"
  },
  "devDependencies": {
    "@eslint-react/eslint-plugin": "2.3.7",
    "@eslint/js": "9.39.1",
    "@microsoft/api-extractor": "^7.57.6",
    "@stylistic/eslint-plugin": "^5.7.1",
    "@tailwindcss/cli": "4.1.17",
    "@types/copyfiles": "~2.4.4",
    "@types/minimist": "~1.2.5",
    "@types/node": "^22",
    "@types/webpack-node-externals": "~3.0.4",
    "@typescript-eslint/utils": "8.47.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^10.1.0",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-better-tailwindcss": "^4.0.2",
    "eslint-plugin-perfectionist": "^5.4.0",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "glob": "^13.0.6",
    "globals": "^17.3.0",
    "minimist": "^1.2.8",
    "p-limit": "^7.3.0",
    "prettier": "3.6.2",
    "pretty-quick": "^4.2.2",
    "rimraf": "^6.1.3",
    "sass": "1.97.3",
    "tailwindcss": "4.1.17",
    "terser-webpack-plugin": "^5.3.10",
    "ts-loader": "^9.5.1",
    "tsdown": "0.21.0-beta.1",
    "typescript": "^5.0.0",
    "typescript-eslint": "8.47.0",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "pnpm": {
    "overrides": {
      "node-addon-api": "8.5.0",
      "@types/react": "16",
      "@types/react-dom": "16"
    }
  }
}
